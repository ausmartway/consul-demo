{
    "variables": {
        "gcp_account_file": "{{ env `GCP_ACCOUNT_FILE_JSON`}}",
        "gcp_project_id": "{{ env `GCP_PROJECT_ID` }}",
        "gcp_zone": "{{ env `GCP_ZONE` }}",
        "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
        "aws_secret_key": "{{ env `AWS_SECRET_KEY` }}",
        "aws_region": "{{ env `AWS_REGION` }}",
        "role": "consul-server",
        "type": "server"
    },
    "builders": [
      {
        "image_name": "gcp-ubuntu-consul-{{ user `type` }}",
        "type": "googlecompute",
        "account_file": "{{ user `gcp_account_file` }}",
        "project_id": "{{ user `gcp_project_id` }}",
        "source_image": "gcp-ubuntu-consul-base",
        "ssh_username": "ubuntu",
        "machine_type": "n1-standard-1",
        "zone" : "{{ user `gcp_zone` }}",
        "tags": ["{{ user `role` }}"]
      },
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "aws-ubuntu-consul-client-*",
                "root-device-type": "ebs"
            },
            "owners": ["753646501470"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "aws-ubuntu-consul-server-{{timestamp}}",
        "tags": {
            "Name": "CC Demo Ubuntu Consul Server",
            "owner": "thomas@hashicorp.com",
            "project": "CC Demo SE East Quarterly Training",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "Base_AMI": "{{ .SourceAMI }}",
            "role": "{{ user `role` }}"
        },
	"ami_groups": ["all"]
      }
    ],
    "provisioners": [
      {
        "type": "file",
        "source": "files/server.hcl",
        "destination": "/tmp/server.hcl"
      },
      {
        "type": "shell",
        "inline": [
          "sleep 15",
          "sudo mv /tmp/server.hcl /etc/consul/server.hcl",
          "sudo systemctl enable consul.service",
          "sudo systemctl enable consul_enable_acl.service",
          "sudo rm -rf /opt/consul/*"
        ]
      }
    ]
  }
